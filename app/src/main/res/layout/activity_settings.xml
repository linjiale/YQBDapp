<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context="com.yqbd.yqbdapp.activities.settings.SettingsActivity">
    <include layout="@layout/top_toolbar"/>
    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/text_left_margin"
            android:paddingRight="@dimen/text_right_margin"
            android:background="@color/color_background_white"
            android:gravity="center_vertical">
        <Button
                android:text="帮助"
                android:textSize="@dimen/text_size_button_primary"
                android:textAlignment="viewStart"
                android:layout_gravity="start"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/color_background_white"
                android:id="@+id/help_jump"/>
    </LinearLayout>
    <ImageView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            app:srcCompat="@color/black"
            android:id="@+id/line"/>
    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/color_background_white"
            android:paddingLeft="@dimen/text_left_margin"
            android:paddingRight="@dimen/text_right_margin"
            android:gravity="center_vertical">
        <Button
                android:text="建议与反馈"
                android:textSize="@dimen/text_size_button_primary"
                android:textAlignment="viewStart"
                android:layout_gravity="start"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/color_background_white"
                android:id="@+id/advice_jump"/>
    </LinearLayout>
    <ImageView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            app:srcCompat="@color/black"/>
    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/color_background_white"
            android:paddingLeft="@dimen/text_left_margin"
            android:paddingRight="@dimen/text_right_margin"
            android:gravity="center_vertical">
        <Button
                android:text="关于我们"
                android:textSize="@dimen/text_size_button_primary"
                android:textAlignment="viewStart"
                android:layout_gravity="start"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/color_background_white"
                android:id="@+id/about_us"/>
    </LinearLayout>
    <ImageView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            app:srcCompat="@color/black"/>
    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/color_background_white"
            android:paddingLeft="@dimen/text_left_margin"
            android:paddingRight="@dimen/text_right_margin"
            android:gravity="center_vertical">
        <Button
                android:text="清除缓存"
                android:textSize="@dimen/text_size_button_primary"
                android:textAlignment="viewStart"
                android:layout_gravity="start"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/color_background_white"
                android:id="@+id/cache"/>
    </LinearLayout>
</LinearLayout>
